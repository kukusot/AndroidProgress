<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <kukusot.progress.TypingProgressView
            android:layout_marginBottom="16dp"
            android:layout_marginTop="26dp"
            android:layout_gravity="center_horizontal"
            app:circleColor="@color/colorPrimaryDark"
            app:circleRadius="4dp"
            app:circleSpacing="3dp"
            app:circleTravel="8dp"
            app:numDots="3"
            app:animationDuration="2000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <kukusot.progress.TypingProgressView
            android:id="@+id/typingDynamic"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="26dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <kukusot.progress.WindowsLoadingView android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:layout_marginBottom="16dp"
                                         android:layout_marginTop="16dp"
                                         android:layout_gravity="center_horizontal"
                                         app:circleRadius="3dp"
                                         app:animationDuration="1500"
                                         app:radius="30dp"
                                         app:numDots="6"
                                         app:circleColor="@color/colorAccent"/>


    <kukusot.progress.SquareDotsLoadingView android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginBottom="16dp"
                                            android:layout_marginTop="16dp"
                                            app:circleRadius="4dp"
                                            app:radius="40dp"
                                            app:numDots="6"
                                            app:circleColor="@color/colorPrimary"/>


    <kukusot.progress.ExpandingCirclesView android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:layout_gravity="center_horizontal"
                                           android:layout_marginBottom="16dp"
                                           android:layout_marginTop="16dp"
                                           app:circleRadius="4dp"
                                           app:radius="40dp"
                                           app:circleColor="@color/colorPrimary"/>


</LinearLayout>