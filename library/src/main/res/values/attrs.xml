<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="circleColor" format="color"/>
    <attr name="circleRadius" format="dimension"/>
    <attr name="numDots" format="integer"/>
    <attr name="animationDuration" format="integer"/>
    <attr name="radius" format="dimension"/>

    <declare-styleable name="TypingProgressView">
        <attr name="circleColor"/>
        <attr name="circleRadius"/>
        <attr name="animationDuration"/>
        <attr name="numDots"/>
        <attr name="circleSpacing" format="dimension"/>
        <attr name="circleTravel" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="SquareDotsLoadingView">
        <attr name="animationDuration"/>
        <attr name="circleColor"/>
        <attr name="circleRadius"/>
        <attr name="numDots"/>
        <attr name="radius"/>
    </declare-styleable>

    <declare-styleable name="WindowsLoadingView">
        <attr name="animationDuration"/>
        <attr name="circleColor"/>
        <attr name="circleRadius"/>
        <attr name="numDots"/>
        <attr name="radius"/>
    </declare-styleable>

</resources>